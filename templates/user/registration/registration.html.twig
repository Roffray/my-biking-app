{% extends 'base.html.twig' %}

{% block title 'Sign up' %}

{% block page_content %}
    <h1 class="h3 my-3 font-weight-normal d-flex justify-content-center">{{ 'signup'|trans|capitalize }}</h1>

    {{ form_start(form) }}
        <div class="row form-group justify-content-md-center">
            <div class="col-md-2">
                {{ form_label(form.email, null) }}
            </div>
            <div class="col-md-2">
                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-sm'}}) }}
            </div>
        </div>

        <div class="row form-group justify-content-md-center">
            <div class="col-md-2">
                {{ form_label(form.name, null) }}
            </div>
            <div class="col-md-2">
                {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-sm'}}) }}
            </div>
        </div>

        <div class="row form-group justify-content-md-center">
            <div class="col-md-2">
                {{ form_label(form.password.first, null) }}
            </div>
            <div class="col-md-2">
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control form-control-sm'}}) }}
            </div>
        </div>

        <div class="row form-group justify-content-md-center">
            <div class="col-md-2">
                {{ form_label(form.password.second, null) }}
            </div>
            <div class="col-md-2">
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control form-control-sm'}}) }}
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button class="btn btn-md btn-outline-primary mt-2" type="submit">
                {{ 'signup'|trans|capitalize }}
            </button>
        </div>
    {{ form_end(form) }}
{% endblock %}
