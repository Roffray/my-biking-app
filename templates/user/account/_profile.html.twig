<div class="alert" id="form-profile-alert"></div>
{{ form_start(form) }}
<div class="row form-group justify-content-md-center">
    <div class="col-md-2">
        {{ form_label(form.email, null) }}
    </div>
    <div class="col-md-2">
        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-sm'}, 'value': user.email}) }}
    </div>
</div>

<div class="row form-group justify-content-md-center">
    <div class="col-md-2">
        {{ form_label(form.name, null) }}
    </div>
    <div class="col-md-2">
        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-sm'}, 'value': user.name}) }}
    </div>
</div>

<div class="d-flex justify-content-center">
    <button class="btn btn-md btn-outline-primary mt-2" type="submit" name="profile[submit]">
        Edit
    </button>
</div>
{{ form_end(form) }}
