{% extends 'base.html.twig' %}

{% block title 'Contact' %}

{% block page_content %}
    <h1 class="h3 my-3 font-weight-normal d-flex justify-content-center">{{ 'contact'|trans|capitalize }}</h1>

    {{ form_start(contact_form) }}
    <div class="row form-group justify-content-md-center">
        <div class="col-md-2">
            {{ form_label(contact_form.firstname, null) }}
        </div>
        <div class="col-md-2">
            {{ form_widget(contact_form.firstname, {'attr': {'class': 'form-control form-control-sm'}}) }}
        </div>
    </div>

    <div class="row form-group justify-content-md-center">
        <div class="col-md-2">
            {{ form_label(contact_form.email, null) }}
        </div>
        <div class="col-md-2">
            {{ form_widget(contact_form.email, {'attr': {'class': 'form-control form-control-sm'}}) }}
        </div>
    </div>

    <div class="row form-group justify-content-md-center">
        <div class="col-md-2">
            {{ form_label(contact_form.message, null) }}
        </div>
        <div class="col-md-2">
            {{ form_widget(contact_form.message, {'attr': {'class': 'form-control form-control-sm'}}) }}
        </div>
    </div>

    <div class="d-flex justify-content-center">
        {{ form_widget(contact_form.submit, {'attr': {'class': 'btn btn-md btn-outline-primary mt-2'}}) }}
    </div>
    {{ form_end(contact_form) }}
{% endblock %}