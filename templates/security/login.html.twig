{% extends 'base.html.twig' %}

{% block title 'Log in' %}

{% block page_content %}
    <h1 class="h3 my-3 font-weight-normal d-flex justify-content-center">{{ 'signin'|trans|capitalize }}</h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="row form-group justify-content-md-center">
            <div class="col-md-2">
                <label for="inputEmail">{{ 'form.label.email'|trans }}</label>
            </div>
            <div class="col-md-2">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-sm" required autofocus>
            </div>
        </div>
        <div class="row form-group justify-content-md-center">
            <div class="col-md-2">
                <label for="inputPassword">{{ 'form.label.password'|trans }}</label>
            </div>
            <div class="col-md-2">
                <input type="password" name="password" id="inputPassword" class="form-control form-control-sm" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <div class="d-flex justify-content-center">
            <button class="btn btn-md btn-outline-primary mt-2" type="submit">
                {{ 'signin'|trans|capitalize }}
            </button>
        </div>
    </form>
{% endblock %}
